/* pages/addcar/addcar.wxss */
.container{
    padding: 32rpx;
    font-size: 36rpx;
}
.addcar-wrap{
    display: flex;
    display: -webkit-flex;
    margin-top: 50rpx;
}
.left{
    flex: 2;
    -webkit-flex: 2;
    -webkit-box-flex: 2;
}
.left text{
    display: block;
    line-height: 72rpx;
    text-align: right;
}
.right{
    flex: 4;
    -webkit-flex: 4;
    -webkit-box-flex: 4;
    margin-left: 30rpx;
}
.right input{
    line-height: 70rpx;
    padding: 10rpx;
}
button{
    margin-top: 80rpx;
}
.title{
    font-size: 40rpx;
    text-align: center;
    padding: 32rpx 0;
}