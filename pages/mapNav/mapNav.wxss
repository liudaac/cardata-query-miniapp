/* pages/mapNav/mapNav.wxss */
#map {
    width: 100%;
    height: 100vh;
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    z-index: 1;
}
.search-wrapper {
    position: absolute;
    z-index: 3;
    top: 40rpx;
    padding: 16rpx;
    width: 80%;
    left: 50%;
    transform: translateX(-50%);
    -webkit-transform: translateX(-50%);
    background: #fff;
    box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.5);
}
.search-wrapper input {
    display: block;
    height: 40rpx;
    line-height: 40rpx;
    font-size: 32rpx;
    padding-left: 16rpx;
}